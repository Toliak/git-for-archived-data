{
    "name": "git-for-archived-data",
    "version": "0.3.0",
    "description": "Utility that automates archive packing and unpacking for tracking the content of the archive",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "pretest": "npm run convert-schema",
        "test": "jest .",
        "prebuild": "npm run convert-schema",
        "build": "tsc --build",
        "dev": "npm run build && node dist/index.js",
        "eslint": "eslint --max-warnings=0 .",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "convert-schema": "node utils/convert-schema.mjs"
    },
    "bin": {
        "gfad": "./dist/index.js",
        "git-for-archived-data": "./dist/index.js"
    },
    "files": [
        "dist/**",
        "*.schema.json"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "devDependencies": {
        "@types/archiver": "^5.3.1",
        "@types/inquirer": "^9.0.3",
        "@types/jest": "^29.2.4",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18.11.13",
        "@types/prettier": "^2.4.4",
        "@types/unzipper": "^0.10.5",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "eslint": "^8.29.0",
        "jest": "^29.3.1",
        "json-schema-to-typescript": "^11.0.2",
        "prettier": "=3.0.0-alpha.4",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.5.5",
        "@types/argparse": "^2.0.10"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "chokidar": "^3.5.3",
        "glob": "^8.0.3",
        "inquirer": "^9.1.4",
        "js-yaml": "^4.1.0",
        "json5": "^2.2.1",
        "jsonschema": "^1.4.0",
        "prettier-plugin-xml-msword": "=2.2.0-1",
        "unzipper": "^0.10.11",
        "argparse": "^2.0.1"
    }
}
