{
    "name": "git-for-archived-data",
    "version": "0.1.0",
    "description": "Utility that automates archive packing and unpacking for tracking the content of the archive",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest .",
        "prebuild": "npm run convert-schema",
        "build": "tsc --build",
        "dev": "npm run build && gfad",
        "eslint": "eslint --max-warnings=0 .",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "convert-schema": "node utils/convert-schema.js"
    },
    "bin": {
        "gfad": "./dist/index.js"
    },
    "files": [
        "dist/**",
        "*.schema.json"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "devDependencies": {
        "@prettier/plugin-xml": "^1.2.0",
        "@types/archiver": "^5.3.1",
        "@types/jest": "^27.4.0",
        "@types/js-yaml": "^4.0.5",
        "@types/json5": "^2.2.0",
        "@types/node": "^17.0.18",
        "@types/prettier": "^2.4.4",
        "@types/unzipper": "^0.10.5",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "eslint": "^7.32.0",
        "jest": "^27.5.1",
        "json-schema-to-typescript": "^10.1.5",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "archiver": "^5.3.0",
        "chokidar": "^3.5.3",
        "glob": "^7.2.0",
        "js-yaml": "^4.1.0",
        "json5": "^2.0.0",
        "jsonschema": "^1.4.0",
        "unzipper": "^0.10.11"
    }
}
