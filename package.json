{
    "name": "git-for-archived-data",
    "version": "0.4.0",
    "description": "Utility that automates archive packing and unpacking for tracking the content of the archive",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "pretest": "npm run convert-schema",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "prebuild": "npm run convert-schema",
        "build": "tsc --build",
        "dev": "npm run build && node dist/index.js",
        "eslint": "eslint --max-warnings=0 .",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "convert-schema": "node utils/convert-schema.mjs"
    },
    "bin": {
        "gfad": "./dist/index.js",
        "git-for-archived-data": "./dist/index.js"
    },
    "files": [
        "dist/**",
        "*.schema.json"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "devDependencies": {
        "@types/adm-zip": "^0.5.0",
        "@types/archiver": "^5.3.2",
        "@types/inquirer": "^9.0.3",
        "@types/jest": "^29.5.5",
        "@types/js-yaml": "^4.0.6",
        "@types/node": "^20.6.3",
        "@types/prettier": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "eslint": "^8.49.0",
        "jest": "^29.3.1",
        "json-schema-to-typescript": "^13.1.1",
        "prettier": "=3.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "@types/argparse": "^2.0.10"
    },
    "dependencies": {
        "adm-zip": "^0.5.10",
        "archiver": "^6.0.1",
        "chokidar": "^3.5.3",
        "glob": "^10.3.4",
        "inquirer": "^9.2.11",
        "js-yaml": "^4.1.0",
        "json5": "^2.2.3",
        "jsonschema": "^1.4.1",
        "prettier-plugin-xml-msword": "=3.2.1-1",
        "@prettier/plugin-xml": "^3.2.1",
        "argparse": "^2.0.1",
        "@xml-tools/parser": "^1.0.11"
    }
}
